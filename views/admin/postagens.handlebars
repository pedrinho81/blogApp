<h2>Lista de postagens:</h2>
{{#each erros}} 
    <div class="alert alert-danger">{{texto}}</div>
 {{else}}
    
 {{/each}}
 <a href="/admin/postagens/add"   
<button class="btn btn-success mt-4">Nova postagem</button>
</a>


{{#each postagens}}
    <div class="card mt-2">
        <div Class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"> <button class="btn btn-success mt-2">Editar postagem</button> </a>
            <form action="/admin/postagens/delete" method="post">
                <button class="btn btn-danger mt-2" name="id" value="{{_id}}" type="submit">Deletar postagem</button>
            </form>
        </div>
        
    </div>
{{else}}
      <h4 class="mt-4 alert alert-warning">Nenhuma postagem registrada! </h4>

{{/each}}
