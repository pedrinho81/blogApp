
<div class="card">
    
    <div class="card-body">
        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}
        <h4>Adicionar postagem:</h4>
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>
            <input type="text" class="form-control" name="titulo" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control"required>
            <label for="conteudo">Conteúdo: </label required>
           <textarea name="conteudo" class="form-control" required></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="" class="form-select form-select-lg mb-3" aria-label=""> 
                {{#each categorias}}
                <option value="{{_id}}"> {{nome}} </option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
                
                
                
            </select>
           <button type="submit" class="btn btn-success mt-2" >Criar postagem</button>

        </form>
    </div>
</div>